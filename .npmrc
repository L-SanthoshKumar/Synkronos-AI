# Prevent package-lock.json from being generated
package-lock=false

# Use exact versions when installing new packages
save-exact=true

# Prevent automatic package updates
auto-install-peers=false

# Use the package manager's lockfile for deterministic installs
prefer-offline=true

# Set the npm registry (using default npm registry)
registry=https://registry.npmjs.org/

# Set the engine-strict flag to ensure compatibility
engine-strict=true
